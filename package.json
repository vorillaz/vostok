{
  "name": "vostok",
  "description": "A simple proxy gateway for microservices",
  "homepage": "https://github.com/vorillaz/vostok#readme",
  "version": "1.3.1",
  "bin": {
    "vostok": "./bin/vostok"
  },
  "author": {
    "name": "@vorillaz"
  },
  "contributors": [
    {
      "name": "vorillaz",
      "email": "theodorevorillas@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vorillaz/vostok.git"
  },
  "bugs": {
    "url": "https://github.com/vorillaz/vostok/issues"
  },
  "keywords": [
    "cli",
    "microservices",
    "tools"
  ],
  "dependencies": {
    "boxen": "4.2.0",
    "chalk": "3.0.0",
    "clipboardy": "2.2.0",
    "cross-spawn": "7.0.1",
    "dotenv": "8.2.0",
    "fastify": "2.15.1",
    "fastify-http-proxy": "3.0.0",
    "fastify-static": "2.6.0",
    "fs-extra": "8.1.0",
    "minimist": "1.2.5",
    "semver": "7.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ava": "3.8.2",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "prettier": "1.19.1",
    "standard-version": "latest"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "contributors": "(git-authors-cli && finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "finepack": "finepack",
    "postrelease": "yarn release:tags && yarn release:github && ci-publish",
    "prerelease": "yarn update:check && yarn contributors",
    "release": "standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "ava",
    "test:watch": "ava --watch --verbose",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "ava": {
    "concurrency": 5,
    "files": [
      "test/**/*.js"
    ],
    "ignoredByWatcher": [
      "test/fixtures"
    ],
    "verbose": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write"
    ],
    "package.json": [
      "finepack"
    ]
  }
}
