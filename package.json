{
  "name": "vostok",
  "description": "A simple proxy gateway for microservices",
  "homepage": "https://github.com/vorillaz/vostok#readme",
  "version": "1.8.0",
  "bin": {
    "vostok": "./build/vostok.js"
  },
  "types": "vostok.d.ts",
  "pkg": {
    "scripts": "build/**/*.js"
  },
  "author": {
    "name": "@vorillaz"
  },
  "contributors": [
    {
      "name": "vorillaz",
      "email": "theodorevorillas@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vorillaz/vostok.git"
  },
  "bugs": {
    "url": "https://github.com/vorillaz/vostok/issues"
  },
  "keywords": [
    "cli",
    "microservices",
    "tools"
  ],
  "dependencies": {
    "chalk": "4.1.2",
    "clipboardy": "3.0.0",
    "cross-spawn": "7.0.3",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "fs-extra": "10.0.0",
    "http-proxy-middleware": "2.0.1",
    "minimist": "1.2.5",
    "semver": "7.3.4",
    "yargs": "17.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.12",
    "@types/node": "16.11.6",
    "@types/semver": "7.3.9",
    "@types/yargs": "17.0.2",
    "ava": "^3.15.0",
    "esbuild": "0.13.12",
    "esbuild-plugin-node-externals": "0.2.0",
    "finepack": "latest",
    "husky": "^7.0.0",
    "lint-staged": "latest",
    "prettier": "2.2.1",
    "ts-node": "10.0.0",
    "typescript": "4.4.4"
  },
  "files": [
    "/build",
    "vostok.d.ts"
  ],
  "scripts": {
    "build": "rm -rf build & node esbuild/index.js",
    "build:watch": "npm run build -- --watch",
    "test": "ava",
    "test:ci": "nyc ava --fail-fast",
    "test:watch": "ava --watch --verbose",
    "prepare": "husky install",
    "type-check": "tsc"
  },
  "license": "MIT",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
